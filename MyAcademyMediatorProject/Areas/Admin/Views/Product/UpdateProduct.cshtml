@model GetProductByIdQueryResult
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3>Ürün Güncelleme</h3>
    <form method="post" action="/Admin/Product/UpdateProduct">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Ürün Adı</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <input type="number" step="0.01" class="form-control" name="Price" value="@Model.Price" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Stok</label>
            <input type="number" class="form-control" name="Stock" value="@Model.Stock" required />
        </div>

        <div class="mb-3">
            <label>Kategori</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
                <option value="">Kategori Seçiniz</option>
            </select>
        </div>

        <button type="submit" class="btn btn-warning">Güncelle</button>
        <a href="/Admin/Product/Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

