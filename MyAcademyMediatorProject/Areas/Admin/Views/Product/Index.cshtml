@model List<GetProductsQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3>Ürün Listesi</h3>
    <a href="/Admin/Product/CreateProduct" class="btn btn-primary mb-3">Yeni Ürün Ekle</a>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price ₺</td>
                    <td>@item.Stock</td>
                    <td>
                        @(item.Category?.Name ?? "Kategori Yok")

                    </td>
                    <td>
                        <a href="/Admin/Product/UpdateProduct/@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                        <a href="/Admin/Product/DeleteProduct/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

